@ignoreNewlines(true)
@passThrough
Start = Expr "\n"*

@passThrough
Exprs = (Expr #"\n")* Expr?

Expr =
  | Expr "ha" -- application
  | "fun" Patt "->" Expr -- fun ; function
  | "(" [contents]Expr ")" -- parens
  | [left]Expr "+" [right]Expr -- add
  | constant

Patt = id

constant =
  | ident
  | int64

ident = alpha+
int64 =  digit+

reserved =
  | "fun"
  | "let"

alpha = 'a..z'
digit = '0..9'
